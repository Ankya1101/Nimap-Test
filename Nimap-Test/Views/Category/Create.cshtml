@model Category
@{
    ViewBag.Title = "Create New Category";
}
<h2>Cretae New Category</h2>

<div class="row">
    <div class="col-lg-9 mx-auto rounded border p-4">
        <h2 class="text-center mb-3">Create New Category</h2>
        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category Name*</label>
                <div class="col-sm-8">
                    @* <input class="form-control" asp-for="ProductName" /> *@
                    <input class="form-control" asp-for="CategoryName" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12 text-center">
                    <a href="@Url.Action("Index", "Category")" class="btn btn-secondary mt-3">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>