@model Product
@{
    ViewBag.Title = "Edit Product";
}
<h2>Edit Product</h2>

<div class="row">
    <div class="col-lg-9 mx-auto rounded border p-4">
        <h2 class="text-center mb-3">Edit Product</h2>
        <form method="post">
            <input asp-for="ProductId" hidden/>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Product Name*</label>
                <div class="col-sm-8">
                    @* <input class="form-control" asp-for="ProductName" /> *@
                    <input class="form-control" asp-for="ProductName" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>
            <!-- Phone Number -->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category*</label>
                <div class="col-sm-8">
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <!-- Submit Button -->
            <div class="row mb-3">
                <div class="col-12 text-center">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12 text-center">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary mt-3">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>